{
  "image": "nixpkgs/devcontainer:nixos-21.05",
  "extensions": [
    "arrterian.nix-env-selector",
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-toolsai.jupyter",
    "mechatroner.rainbow-csv",
    "foxundermoon.shell-format"
  ],
  "runArgs": [
    "--gpus=all"
  ],
  "mounts": [
    "type=volume,source=nix,target=/nix"
  ],
  "containerEnv": {
    "NIXPKGS_ALLOW_UNFREE": "1",
    "LD_LIBRARY_PATH": "/usr/lib64"
  }
}